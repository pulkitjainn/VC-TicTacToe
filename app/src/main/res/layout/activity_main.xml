<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pulkit.tictactoe.MainActivity">

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIC-TAC-TOE"
        android:textSize="50dp"
        android:layout_marginLeft="20dp"
        />


    <Button
        android:text="6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b6"
        android:textSize="25dp"
        android:layout_below="@+id/b3"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:text="9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b9"
        android:textSize="25dp"
        android:layout_below="@+id/b6"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:text="1"
        android:layout_height="100dp"
        android:id="@+id/b1"
        android:textSize="25dp"
        android:layout_width="100dp"
        android:layout_toLeftOf="@+id/b5"
        android:layout_toStartOf="@+id/b5"
        android:layout_marginTop="125dp" />

    <Button
        android:text="4"
        android:textSize="25dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b4"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1" />

    <Button
        android:text="7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b7"
        android:layout_below="@+id/b4"
        android:layout_toLeftOf="@+id/b5"
        android:textSize="25dp"
        android:layout_toStartOf="@+id/b5" />

    <Button
        android:text="5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b5"
        android:layout_alignBottom="@+id/b4"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b1" />

    <Button
        android:text="8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b8"
        android:layout_toRightOf="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:layout_alignBottom="@+id/b7"
        android:textSize="25dp"
        android:layout_below="@+id/b4" />

    <Button
        android:text="2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/b5"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:id="@+id/b2" />

    <Button
        android:text="3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/b3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5"
        android:layout_marginTop="125dp"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b8"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/p"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/res"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
</RelativeLayout>
